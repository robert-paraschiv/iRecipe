<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.rokudoz.irecipe.Fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment"
             />
        <action
            android:id="@+id/action_homeFragment_to_recipeDetailedFragment"
            app:destination="@id/recipeDetailedFragment"
            />
        <action
            android:id="@+id/action_homeFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment"
            />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.rokudoz.irecipe.Fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_recipeDetailedFragment"
            app:destination="@id/recipeDetailedFragment"
            />
        <action
            android:id="@+id/action_searchFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.rokudoz.irecipe.Fragments.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_recipeDetailedFragment"
            app:destination="@id/recipeDetailedFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.rokudoz.irecipe.Fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/recipeDetailedFragment"
        android:name="com.rokudoz.irecipe.Fragments.RecipeDetailedFragment"
        android:label="fragment_recipe_detailed"
        tools:layout="@layout/fragment_recipe_detailed" >
        <argument
            android:name="documentID"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="ingredients"
            app:argType="string" />
        <argument
            android:name="imageUrls"
            app:argType="string[]" />
        <argument
            android:name="instructions"
            app:argType="string" />
        <argument
            android:name="isFavorite"
            app:argType="boolean" />
        <argument
            android:name="favRecipes"
            app:argType="string[]" />
        <argument
            android:name="loggedInUserDocumentId"
            app:argType="string" />
        <argument
            android:name="numberOfFaves"
            app:argType="integer" />


    </fragment>
</navigation>