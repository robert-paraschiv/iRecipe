<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="4dp"
    app:cardCornerRadius="18dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search in categories : " />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/dialog_search_filter_breakfastCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breakfast" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/dialog_search_filter_lunchCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lunch" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/dialog_search_filter_dinnerCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinner" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/dialog_search_filter_fixIngredientsCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Show only recipes i can cook" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_search_filter_applyButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="Apply"
            app:cornerRadius="18dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>