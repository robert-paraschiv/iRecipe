<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddRecipesActivity">

    <ImageView
        android:id="@+id/addRecipes_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        tools:src="@drawable/ic_launcher_background"/>

    <Button
        android:id="@+id/addRecipes_choose_path_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addRecipes_image"
        android:layout_marginTop="16dp"
        android:text="Choose File" />

    <EditText
        android:id="@+id/addRecipes_text_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addRecipes_image"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/addRecipes_choose_path_btn"
        android:hint="Enter a file name" />


    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addRecipes_choose_path_btn"
        android:hint="Title"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_title"
        android:hint="Description"
        android:inputType="text" />


    <EditText
        android:id="@+id/edit_text_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_description"
        android:hint="Ingredients"
        android:inputType="text" />

    <ProgressBar
        android:id="@+id/addRecipes_progressbar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_tags" />

    <Button
        android:id="@+id/addRecipes_add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addRecipes_progressbar"
        android:layout_marginTop="16dp"
        android:onClick="addRecipe"
        android:text="Add" />

    <Button
        android:id="@+id/addRecipes_back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addRecipes_add_btn"
        android:onClick="backToSearch"
        android:text="Back to Search" />
</RelativeLayout>