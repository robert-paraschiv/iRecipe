<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/margin"
        android:src="@color/black"
        />
        <TextView
            android:id="@+id/step_item_StepNumber_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_below="@id/margin"
            android:maxLines="1"
            tools:text="Step 1"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/step_item_StepText_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/step_item_StepNumber_TextView"
            tools:text="You cook the shit out of it and then you put it in the oven
\nand then you also fuck it up untill it's burn out"
            android:textSize="12sp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@id/step_item_StepText_TextView"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="18dp"
            android:id="@+id/recycler_view_StepItem_Image_CardView"
            >
            <ImageView
                android:id="@+id/stepItem_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                tools:src="@color/colorPrimary"/>
        </com.google.android.material.card.MaterialCardView>

</RelativeLayout>