<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="4dp"
    app:cardCornerRadius="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:src="@color/colorPrimaryDark"
            android:id="@+id/searchUserItem_image"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/searchUserItem_user_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/searchUserItem_image"
            android:maxLines="1"
            tools:text="User Name"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchUserItem_sentReqTv"
            android:layout_below="@id/searchUserItem_user_name_textView"
            android:text="Sent you  a friend request"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/searchUserItem_image"
            android:layout_marginStart="12dp"
            android:visibility="invisible"
            tools:visibility="visible"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/searchUserItem_addFriendBtn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:icon="@drawable/ic_person_add_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:visibility="invisible"
            tools:visibility="visible"
            />



    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>