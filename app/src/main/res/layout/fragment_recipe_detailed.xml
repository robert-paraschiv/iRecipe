<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/recipeDetailed_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:elevation="4dp"
                android:transitionName="example_transition"
                tools:src="@color/grey" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipeDetailed_image"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                tools:text="TitleHere" />

            <TextView
                android:id="@+id/tvDescription"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                tools:text="Description Here" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageview_favorite_icon"
                android:src="@drawable/ic_star_border_black_24dp"
                android:layout_below="@id/recipeDetailed_image"
                android:layout_alignParentEnd="true"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                />

            <TextView
                android:id="@+id/tvIngredientsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDescription"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                tools:text="Ingredients list
        -Ingredient1
        -Ingredient2
        -Ingredient3
        -Ingredient4
        -Ingredient5
        -Ingredient6" />

            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvIngredientsList"
                android:padding="8dp"
                style="@style/TextAppearance.MaterialComponents.Chip"
                tools:text="Okay so basically you do stuff here
with the ingredients so ay lmao many lines
but yeah so then we add the stuff together and then we don't have the stuff anymore
but the stuff turns into some food so basically we do have stuff
but the stuff is now food" />


            <EditText
                android:id="@+id/recipeDetailed_et_commentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvInstructions"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/recipeDetailed_addComment_btn"
                android:hint="Comment here" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/recipeDetailed_addComment_btn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvInstructions"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Post" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comment_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/recipeDetailed_et_commentInput"
                android:transitionName="example_transition"/>
        </RelativeLayout>

    </ScrollView>
