<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DayScheduleFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/dayScheduleFragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_size"
        app:title="DAY SCHEDULE" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dayScheduleFragment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dayScheduleFragment_toolbar"
        android:layout_marginTop="4dp" />

</RelativeLayout>