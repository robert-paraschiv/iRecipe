<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background_color"
    tools:context=".SelectRecipeActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/selectRecipeActivity_my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <SearchView
            android:id="@+id/selectRecipeActivity_SearchView"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_card"
            android:closeIcon="@drawable/ic_close"
            android:iconifiedByDefault="false"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:padding="4dp"
            android:searchHintIcon="@drawable/ic_search_black_24dp"
            android:searchIcon="@drawable/ic_search_black_24dp" />
    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchActivity_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectRecipeActivity_my_toolbar"
        android:padding="4dp"
        android:scrollbars="vertical" />

</RelativeLayout>