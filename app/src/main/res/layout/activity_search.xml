<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.rokudoz.irecipe.SearchActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_search"
        android:id="@+id/tv_search"/>
    <ListView
        android:layout_below="@id/tv_search"
        android:id="@+id/checkable_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>

    <Button
        android:layout_below="@id/checkable_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_btn"
        android:onClick="searchRecipes"
        android:text="Search" />
    <Button
        android:layout_below="@id/search_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signOut_btn"
        android:onClick="signOut"
        android:text="Sign out" />

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/signOut_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="navigateToAddRecipes"
        android:src="@drawable/ic_fb_plus"
        app:fabCustomSize="50dp"
        />




</RelativeLayout>