<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.rokudoz.irecipe.MyIngredientsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_myingredients_string"
        android:id="@+id/myingredients_tv_search"/>
    <ListView
        android:layout_below="@id/myingredients_tv_search"
        android:id="@+id/checkable_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/checkable_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nestedScrollview">
    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:layout_below="@id/nestedScrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_btn"
        android:text="Save" />


    <Button
        android:layout_below="@id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/backToSearchBtn"
        android:onClick="backToSearch"
        android:text="Back to Search" />






</RelativeLayout>