<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:background="@color/toolbar_color"
    android:elevation="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/conversationDialog_user_picture"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:contentDescription="Profile picture"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@color/black" />

        <TextView
            android:id="@+id/conversationDialog_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversationDialog_user_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/calendar_textColor"
            android:textSize="18sp"
            tools:text="User Full Name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/conversationDialog_user_name"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/conversationDialog_sendMessageBtn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Send message"
                app:cornerRadius="@dimen/buttonCornerRadius" />

            <Button
                android:id="@+id/conversationDialog_viewProfileBtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="View Profile"
                app:cornerRadius="@dimen/buttonCornerRadius" />


        </LinearLayout>


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>